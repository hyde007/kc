      <script type="text/javascript">
         onLoadData('{{coin}}','{{name}}','1');
         jQuery(document).ready(function(){
              if (jQuery(window).width() < 900) {
                  $('#toggler').show();
              }else{
                  $('#toggler').hide();
              }
          });
      </script>
